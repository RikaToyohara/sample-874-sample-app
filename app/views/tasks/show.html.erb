<% provide(:title, @user.name) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
<table class="table table-bordered table-th-color>
  <tr>
    <th>ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名称</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>詳細</th>
    <td><%= link_to "編集", user_task_path(@user.tasks) %></td> 
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= l(@task.created_at, format: :long) %></td>
  </tr>
  <tr>
    <td>更新日</td>
    <td><%= l(@task.updated_at, fomat: :long) %></td>
  </tr> 
</table>

  <%= link_to "編集", edit_user_task_path(@task.id), class: "btn btn-lg btn-success" %>
  <%= link_to "削除", user_task_path, class: "btn btn-lg btn-danger" %>

    </div>
</div>    